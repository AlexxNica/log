{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es6",
      "es2017",
      "esnext"
    ],
    "rootDirs": [
      "./",
      "./src",
      "./dist"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "exclude": [ "node_modules" ],
  "types": [
    "typePatches"
  ]
}
